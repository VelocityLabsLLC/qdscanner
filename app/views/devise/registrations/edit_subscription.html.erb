<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan] == '1' %>
          <h1>Basic Account</h1>
          <p>Sign up for free to purchase products or join an existing group.</p>
        <% elsif params[:plan] == '2' %>
          <h1>Premium Account</h1>
          <p>Sign up for the premium account to create a group (Up to 10 users including yourself)</p>
        <% else %>
          <h1>Pro Account</h1>
          <p>Sign up for the pro account to manage and create unlimited groups that interact with each other</p>
        <% end %>
      </div>
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '1' %>
          <%= render "basic_form" %>
        <% elsif params[:plan] == '2' %>
          <%= render "premium_form" %>
        <% else %>  
          <%= render "pro_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>