<%= form_for([@group, @cage, @animal]) do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :cage_id, :value => @cage.id %>
  <%= f.hidden_field :group_id, :value => params[:group_id] %>
  
  <div class="form-group">
    <%= f.label :identifier %>
    <%= f.text_field :identifier, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :species %>
    <%= f.select :species, options_for_select(species), class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :strain %>
    <%= f.text_field :strain, class: 'form-control' %>
  </div>
  
  
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select(:status, Animal.statuses.keys.map {|status| [status.titleize,status]}) %>
  </div>
  
  <br/>
  <div class="text-center">
    <%= f.submit 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>