<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @group , :url => groups_path do |f| %>
        
        <%= f.hidden_field :owner_id, :value => current_user.id %>
        
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        
        <% if current_user.organization_id!=1 %>
          <%= f.hidden_field :organization_id, :value => current_user.organization.id %>
        <% else %>
          <div class="form-group">
            <%= f.label :organization_id %>
            <div class="input-group">
              <%= select_tag :organization_id, options_from_collection_for_select(@organizations, :id, :name), class: 'form-control' %>
              <span class="input-group-btn">
                <%= link_to "Create Organization", new_organization_path, class: 'btn btn-primary' %>
              </span>
            </div>
          </div>
        <% end %>
        
        <%= f.submit 'Create Group', class: 'btn btn-success' %>
      
      <% end %>
    </div>
  </div>
</div>

