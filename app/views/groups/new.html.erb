<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @group , :url => groups_path do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <%= f.submit 'Create Group', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>