<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Research Groups</h1>
      <p class="text-center">All created research groups.</p>
      <ul class="list-unstyled">
        <% @groups.each do |group| %>
          <li>
            <div class="well row <%= cycle('white-bg','') %>">
              <%= link_to group do %>
                <h2><%= group.name %></h2>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>