<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% if current_user.organization_id==1 %>
        <h1 class="text-center">Unaffiliated Groups</h1>
      <% else %>
        <h1 class="text-center">Groups in <strong><%= current_user.organization.name %></strong></h1>
      <% end %>
      <br/>
      <% if @groups.empty? %>
        <% if current_user.organization_id==1 %>
          <h3 class="text-center">There are no unaffiliated groups yet.</h3>
        <% else %>
          <h3 class="text-center">There are no groups in your organization yet.</h3>
        <% end %>
        <br/>
      <% else %>
      <ul class="list-unstyled">
        <% @groups.each do |group| %>
          <li></li>
            <div class="well row <%= cycle('white-bg','') %>">
              <%= link_to group do %>
                <h2><%= group.name %></h2>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
      <% end %>
      <% if can?(:create, Group)%>
        <div class="text-center">
          <%= link_to "Create a Group", new_group_path, class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
      <%= can? :manage, Group, :organization => { :id => current_user.organization.id } %>
      <%= can? :read, Group.new, :organization => { :id => current_user.organization.id } %>
    </div>
  </div>
</div>