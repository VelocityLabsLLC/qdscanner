<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">Groups in <strong><%= current_user.organization.name %></strong></h1>
      <br/>
      <% if @groups.empty? && current_user.organization %>
        <h3 class="text-center">There are no groups in your organization</h3>
        <br/>
      <% else %>
      <ul class="list-unstyled">
        <% @groups.each do |group| %>
          <li></li>
            <div class="well row <%= cycle('white-bg','') %>">
              <%= link_to group do %>
                <h2><%= group.name %></h2>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
      <% end %>
      <% if can? :create, Group %>
        <div class="text-center">
          <%= link_to "Create a Group", new_group_path, class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>