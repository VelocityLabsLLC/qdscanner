<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Groups in <strong><%=@organization.name%></strong></h1>
      <ul class="list-unstyled">
        <% @groups.each do |group| %>
          <% if can? :read, group %>
            <li>
              <div class="well row <%= cycle('white-bg','') %>">
                <%= link_to group do %>
                  <h3><%= group.name %></h3>
                  <% end %>
                <% if current_user==@owner %>
                  <h2>Owner</h2>
                <% end %>
              </div>
            </li>
          <% end %>
        <% end %>
        <% if can? :update, @organization %>
          <%#= link_to "Add/remove groups in organization", edit_organization_path(:id => @organization.id), class: 'btn btn-primary btn-lg' %>
        <% end %>
        <br/>
        <div class="text-center">
          <% if current_user.has_role?(:group_creator) %>
            <%= link_to "New Group", new_group_path(:id => @organization.id), class: 'btn btn-primary btn-lg' %>
          <% end %>
        </div>
        <br/>
        <div class="text-center">
          <% if current_user.organization==@organization %>
            <%= button_to "Leave organization", remove_user_organization_path(:user_id => current_user.id), data: { confirm: "Are you sure?" }, :method => :delete, class: 'btn btn-danger btn-lg' %>
          <% else %>
            <%= link_to "Join organization", add_user_organization_path(:organization_id => @organization.id, :user_id => current_user.id), :method => :put, class: 'btn btn-primary btn-lg' %>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
</div>